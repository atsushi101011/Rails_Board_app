<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>掲示板作成</h1>
        <%= form_with(model: @board, local: true) do |f| %>
          <div class="form-group">
            <%= f.label :title, "タイトル" %><br />
            <%= f.text_field :title %>
          </div>

          <div class="form-group">
            <%= f.label :body, "本文" %><br />
            <%= f.text_field :body %>
          </div>

          <div class="btn btn-primary">
            <%= f.submit "作成" %>
          </div>

        <% end %>
    </div>
  </div>
</div>