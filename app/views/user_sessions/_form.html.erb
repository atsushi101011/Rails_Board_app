<%= form_with(url: login_path, local: true, method: :post) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>