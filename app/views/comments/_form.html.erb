<%= form_with model: [@board, @comment], id: 'new_comment', remote: true do |f| %>
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <%= f.label :body %>
      <%= f.text_area :body, id: 'js-new-comment-body', class: "form-control mb-3" %>
      <%= f.submit "投稿", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>